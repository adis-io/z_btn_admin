<h1>Users</h1>

<ul>
  <%@users.each do |user|%>
    <li>
      <%= "#{user.first_name} - #{user.last_name}"%>
      <ul>
        <%user.tasks.each do |task|%>
          <% if  task.active? %>
            <li>
              <div style="color: blue; "><%= task.title%></div> 
            </li>
          <%elsif task.time.zero? %>
            <li>
              <div style="color: blue; "><%= task.title%></div> 
            </li>
          <%elsif task.finished_at.present?%>
            <li>
              <div style="color: green; "> <%= task.title%></div>
            </li>
          <%else%>
            <li>
              <div><%= task.title%></div> 
            </li>
          <%end%>            
        <%end%>
      </ul>
    </li>
  <%end%>
</ul>

